    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++/gtkmm: Build and debug GladeTut",
            "type": "cppdbg",
            "request": "launch",
            "program": "main",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Gui",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C++/gtkmm build GladeTut",
            "miDebuggerPath": "/bin/gdb"
        },
